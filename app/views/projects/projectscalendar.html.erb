<div class = "container">
  <div id = "calendar">
  </div>
</div>
<div class = "container">
<%= month_calendar events: @projects do |date,pro,status| %>
	<%= date.day %>
  <% pro.each do |project| %>
     <div>
      <ul>
        <li><%= project.jname %> - <%=  Customer.find(project.customer_id).name.capitalize %> <%=  Customer.find(project.customer_id).lastname.capitalize %></li>
      </ul>
     </div>
  <% end %>
<% end %>
</div>

<% if @projects.empty? %>

<% else %>
<div class = "container">
<h3> Projects Pending for this Month</h3><br>
</div>
<div class = "container">
<table class = "table table-striped  table-hover">
  <thead>
	<tr>
		<th>Customer Name</th>
		<th>Project Name</th>
		<th>Description</th>
		<th>Price</th>
		<th>Start Date</th>
		<th>End Date</th>
    <th>Project Status</th>
    <th colspan = "5"></th>
	</tr>
</thead>
    <% @projects.each do |pro| %>
    <tr>
       <td><%=  Customer.find(pro.customer_id).name.capitalize %> <%=  Customer.find(pro.customer_id).lastname.capitalize %></td>
       <td><%= pro.jname %></td>
       <td><%= pro.jdescription %></td>
       <td><%= currency(pro.price) %></td>
       <td><%= pro.start_time.to_s(:long) %></td>
       <td><%= pro.end_time.to_s(:long) %></td>
       <td><%= CompleteOrNot(pro.project_status) %></td>
       <td><%= link_to 'Show', [pro.customer, pro], class: 'btn btn-info btn-sm' %></td>
       <td><%= link_to 'Edit', [:edit, pro.customer, pro], class: 'btn btn-primary btn-sm' %></td>
    </tr>
    <% end %>
</table>
</div>
<% end %>

<% if @complete_projects.empty? %>

<% else %>

<div class = "container">
<h3> Projects Completed this Month</h3><br>
<table class = "table table-striped  table-hover">
  <thead>
  <tr>
    <th>Customer Name</th>
    <th>Project Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Project Status</th>
  </tr>
</thead>
    <% @complete_projects.each do |pro| %>
    <tr>
       <td><%=  Customer.find(pro.customer_id).name %> <%=  Customer.find(pro.customer_id).lastname %></td>
       <td><%= pro.jname %></td>
       <td><%= pro.jdescription %></td>
       <td><%= currency(pro.price) %></td>
       <td><%= pro.start_time.to_s(:long) %></td>
       <td><%= pro.end_time.to_s(:long) %></td>
       <td><%= CompleteOrNot(pro.project_status) %></td>
    </tr>
    <% end %>
</table>
</div>
<% end %>